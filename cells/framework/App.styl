@import 'mixins/animation';
@import 'mixins/box';
@import 'mixins/gradient';
@import 'mixins/pos';
@import 'mixins/triangle';

@media screen and (max-width: 320px)
  .App
    height 418px

    &.IOSFullScreenApp
      height 460px

@media screen and (min-width: 321px) and (max-width: 480px)
  .App
    height 269px

    &.IOSFullScreenApp
      height 300px

@media screen and (min-width: 481px)
  .App
    height 418px

@-webkit-keyframes slideOutLeft
  from
    -webkit-transform translateX(0)
    opacity 1.0
  to
    -webkit-transform translateX(-100%)
    opacity 0.0

@-webkit-keyframes slideInLeft
  from
    -webkit-transform translateX(100%)
    opacity 0.0
  to
    -webkit-transform translateX(0)
    opacity 1.0

@-webkit-keyframes slideOutRight
  from
    -webkit-transform translateX(0)
    opacity 1.0
  to
    -webkit-transform translateX(100%)
    opacity 0.0

@-webkit-keyframes slideInRight
  from
    -webkit-transform translateX(-100%)
    opacity 0.0
  to
    -webkit-transform translateX(0)
    opacity 1.0

@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1.0

.App
  position relative
  box vertical
  -webkit-tap-highlight-color rgba(0,0,0,0)
  z-index 1

  .headingOut
    animate slideOutLeft

  .headingIn
    animate slideInLeft

  .headingOut-reverse
    animate slideOutRight

  .headingIn-reverse
    animate slideInRight

  > .TitleBar
    abspos 0px 0px false 0px
    z-index 3
    
  > #content
    margin-top 43px
    box-flex 1
    position relative
    z-index 1

  > .TabNavBar
    z-index 2