@import 'mixins/box';
@import 'mixins/gradient';
@import 'mixins/pos';
@import 'mixins/triangle';

.TitleBar
  box horizontal
  box-shadow 0 1px 5px #333
  gradient #444 #111
  height 43px

  buttonColor = #111
  buttonRadius = 5px

  > #backbutton
  > #gobutton
    color #CCC
    display inline-block
    font-size 14px
    font-weight bold
    text-align center
    background-color buttonColor
    position relative
    width 200px
    height 29px
    margin 7px 0 0 0

    > span
      top 6px
      bottom 0px
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

  > #backbutton
    border-radius 0 buttonRadius buttonRadius 0
    left 20px

    &:before
      abspos 0 0 0 -28px
      triangleShape left 14px buttonColor buttonColor

    > span
      abspos false 8px false 2px

  > #gobutton
    border-radius buttonRadius
    right 7px

    > span
      abspos false 8px false 8px

  > #titles
    box-flex 1
    position relative
    z-index 1

    > #title
    > #prevtitle
      abspos 0px 0px false 0px
      color #FFF
      font-size 22px
      font-weight bold
      padding 9px 0 0 0
      text-align center
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      height 35px
      z-index 2

    > #prevtitle
      visibility hidden
      z-index 1

      &.headingOut
      &.headingOut-reverse
        visibility visible
    