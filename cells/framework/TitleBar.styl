@import 'mixins/gradient';
@import 'mixins/pos';
@import 'mixins/triangle';

.TitleBar
  box-shadow 0 1px 5px #333
  gradient #444 #111
  height 43px

  buttonColor = #111
  buttonRadius = 5px

  > #backbutton
  > #forwardbutton
    color #AAA
    display inline-block
    font-size 14px
    text-align center
    abspos 7px false 7px false
    background-color buttonColor

    > span
      top 6px
      bottom 0px
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

  > #backbutton
    border-radius 0 buttonRadius buttonRadius 0
    width 15%
    left 20px

    &:before
      abspos 0 0 0 -28px
      triangleShape left 14px buttonColor buttonColor

    > span
      abspos false 8px false 2px

  > #forwardbutton
    border-radius buttonRadius
    right 7px
    width 20%

    > span
      abspos false 8px false 8px

  > #title
  > #prevtitle
    abspos 0px 25% 0px 25%
    color #FFF
    font-size 22px
    font-weight bold
    padding 9px 0 0 0
    text-align center
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    z-index 2

  > #prevtitle
    visibility hidden
    z-index 1

    &.headingOut
    &.headingOut-reverse
      visibility visible
    