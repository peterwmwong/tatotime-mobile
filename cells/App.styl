@import 'mixins/box';
@import 'mixins/gradient';
@import 'mixins/pos';

@media screen and (max-width: 320px)
  .App
    height 418px

    &.IOSFullScreenApp
      height 460px

@media screen and (min-width: 321px) and (max-width: 480px)
  .App
    height 269px

    &.IOSFullScreenApp
      height 300px

@media screen and (min-width: 481px)
  .App
    height 480px

@-webkit-keyframes slideOutLeft
  from
    -webkit-transform translate3d(0,0,0)
    opacity 1.0
  to
    -webkit-transform translate3d(-100%,0,0)
    opacity 0.0

@-webkit-keyframes slideInLeft
  from
    -webkit-transform translate3d(100%,0,0)
  to
    -webkit-transform translate3d(0,0,0)


@-webkit-keyframes slideOutRight
  from
    -webkit-transform translate3d(0,0,0)
    opacity 1.0
  to
    -webkit-transform translate3d(100%,0,0)
    opacity 0.0

@-webkit-keyframes slideInRight
  from
    -webkit-transform translate3d(-100%,0,0)
  to
    -webkit-transform translate3d(0,0,0)

@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1.0

.App
  position relative
  box vertical
  z-index 1

  > #header
    abspos 0px 0px false 0px
    gradient #3C3C3C #111
    box-shadow 0 1px 5px #333
    z-index 3

    > .title
      color #FFF
      font-size 16px
      font-weight bold
      padding 12px 0 11px 0
      text-align center
  
  > #content
    margin-top 43px
    box-flex 1
    position relative
    z-index 1

    > .scroller
      abspos 0px 0px 0px 0px

      animateMe(name, duration=500ms)
        -webkit-animation-name name
        -webkit-animation-duration duration
        -webkit-animation-fill-mode forwards

      &.headingOut
        animateMe slideOutLeft

      &.headingIn
        animateMe slideInLeft

      &.headingOut-reverse
        animateMe slideOutRight

      &.headingIn-reverse
        animateMe slideInRight

      &.fadeIn
        animateMe fadeIn 1s

  > #footer
    z-index 2

    > ul
      margin 0
      padding 0
      list-style-type none
      box horizontal

      > li
        border-top 2px solid #666
        border-right 1px solid #444
        color #FFF
        gradient #333 #111
        text-align center
        box-flex 1
        padding 10px 0 10px 0

        &:last-child
          border-right none
