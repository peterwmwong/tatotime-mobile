@import 'mixins/animation';
@import 'mixins/box';
@import 'mixins/gradient';
@import 'mixins/pos';
@import 'mixins/text';

.ShowDetails
  padding 20px
  position relative

  > img
    abspos 15px false 0px 15px
    width 100px
    height 150px
    gradient #6A6A6A #AAA

  > .titleGroup
    abspos 20px 15px 0px 125px

    > .title
      font-size 16px
      text-overflow-ellipsis()

    > .network
      color #555
      padding-top 10px
    

  > .description
    // TODO: need a better multi-line text-overflow
    margin-top 160px
    overflow hidden
    height 90px

  > .castGroup
